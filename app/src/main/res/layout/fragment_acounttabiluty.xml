<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <LinearLayout
        android:layout_marginTop="@dimen/default_margin_padding_large"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/ic_01"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/default_margin_padding_medium"
            android:layout_marginRight="@dimen/default_margin_padding_medium"/>

        <ImageView
            android:background="@drawable/ic_08"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/default_margin_padding_medium"
            android:layout_marginRight="@dimen/default_margin_padding_medium"/>


        <ImageView
            android:background="@drawable/ic_007"
            android:layout_marginLeft="@dimen/default_margin_padding_medium"
            android:layout_marginRight="@dimen/default_margin_padding_medium"
            android:layout_width="70dp"
            android:layout_height="60dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/default_margin_padding_medium"
        android:background="@color/color_theme_red"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="80dp">
        <ImageView
            android:background="@drawable/pp"
            android:layout_marginLeft="@dimen/default_margin_padding_medium"
            android:layout_marginRight="@dimen/default_margin_padding_medium"
            android:layout_width="70dp"
            android:layout_height="60dp" />

        <ImageView
            android:background="@drawable/tt"
            android:layout_marginLeft="@dimen/default_margin_padding_medium"
            android:layout_marginRight="@dimen/default_margin_padding_medium"
            android:layout_width="75dp"
            android:layout_height="60dp" />

    </LinearLayout>

    <TextView
        android:text="Procedures"
        android:textColor="@color/color_front_black"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/default_margin_padding_medium"
        android:layout_marginLeft="@dimen/default_margin_padding_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="1. Please Evacuate immediately&#10;2. Follow company procedures&#10;3. Goto Evacuation assemble pont&#10;4. Acknowledge your Safety Status&#10;5. Wait for further instructions&#10;"
        android:textColor="@color/color_front_black"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/default_margin_padding_medium"
        android:layout_marginLeft="@dimen/default_margin_padding_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>