<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_padding_large"
        android:paddingLeft="@dimen/default_margin_padding_medium"
        android:gravity="center_vertical"
        android:text="Fire Extinguisher List"
        android:textColor="@color/color_front_black"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/default_margin_padding_medium"
        android:background="@drawable/rectangle"
        android:layout_height="36dp">

        <Spinner
            android:id="@+id/spinner_shop_list"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:spinnerMode="dropdown"
            android:overlapAnchor="false"
            android:background="@null">
        </Spinner>

        <ImageView
            android:id="@+id/image_category_open_shop_list"
            android:layout_marginRight="@dimen/default_margin_padding_medium"
            android:layout_width="30dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:scaleType="center"
            android:background="@drawable/ic_down_arrow"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/a1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/default_margin_padding_medium"
        android:paddingRight="@dimen/default_margin_padding_medium">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:background="@drawable/image_abe"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin_padding_medium"
            android:gravity="center_vertical"
            android:text="Fire Extinguisher List"
            android:textColor="@color/color_front_black"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_padding_medium"
                android:gravity="center_vertical"
                android:text="Inspect Date"
                android:textSize="12sp"
                android:textColor="@color/color_front_black"
                android:layout_gravity="right|center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_padding_medium"
                android:gravity="center_vertical"
                android:text="30 June 2016 11:23 AM"
                android:textSize="12sp"
                android:layout_gravity="right|center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_padding_medium"
                android:gravity="center_vertical"
                android:text="Expire Date"
                android:textSize="12sp"
                android:textColor="@color/color_front_black"
                android:layout_gravity="right|center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_padding_medium"
                android:gravity="center_vertical"
                android:text="30 June 2016 11:23 AM"
                android:textSize="12sp"
                android:textColor="@color/color_front_black"
                android:layout_gravity="right|center_vertical"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/a2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/default_margin_padding_medium"
        android:paddingRight="@dimen/default_margin_padding_medium">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:background="@drawable/icon_foam"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin_padding_medium"
            android:gravity="center_vertical"
            android:text="Foam"
            android:textColor="@color/color_front_black"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_padding_medium"
                android:gravity="center_vertical"
                android:text="Inspect Date"
                android:textSize="12sp"
                android:textColor="@color/color_front_black"
                android:layout_gravity="right|center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_padding_medium"
                android:gravity="center_vertical"
                android:text="30 June 2016 11:23 AM"
                android:textSize="12sp"
                android:layout_gravity="right|center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_padding_medium"
                android:gravity="center_vertical"
                android:text="Expire Date"
                android:textSize="12sp"
                android:textColor="@color/color_front_black"
                android:layout_gravity="right|center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_padding_medium"
                android:gravity="center_vertical"
                android:text="30 June 2016 11:23 AM"
                android:textSize="12sp"
                android:textColor="@color/color_front_black"
                android:layout_gravity="right|center_vertical"/>


        </LinearLayout>


</LinearLayout>

    <LinearLayout
        android:id="@+id/a3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/default_margin_padding_medium"
        android:paddingRight="@dimen/default_margin_padding_medium">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:background="@drawable/icon_powder_be"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin_padding_medium"
            android:gravity="center_vertical"
            android:text="Powder BE"
            android:textColor="@color/color_front_black"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_padding_medium"
                android:gravity="center_vertical"
                android:text="Inspect Date"
                android:textSize="12sp"
                android:textColor="@color/color_front_black"
                android:layout_gravity="right|center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_padding_medium"
                android:gravity="center_vertical"
                android:text="30 June 2016 11:23 AM"
                android:textSize="12sp"
                android:layout_gravity="right|center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_padding_medium"
                android:gravity="center_vertical"
                android:text="Expire Date"
                android:textSize="12sp"
                android:textColor="@color/color_front_black"
                android:layout_gravity="right|center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_padding_medium"
                android:gravity="center_vertical"
                android:text="30 June 2016 11:23 AM"
                android:textSize="12sp"
                android:textColor="@color/color_front_black"
                android:layout_gravity="right|center_vertical"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>