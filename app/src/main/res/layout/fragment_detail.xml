<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/a1"
        android:paddingLeft="@dimen/default_margin_padding_medium"
        android:paddingRight="@dimen/default_margin_padding_medium"
        android:layout_marginTop="@dimen/default_margin_padding_medium"
        android:background="@drawable/rectangle"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="64dp">


        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="48dp"
            android:layout_height="44dp"
            android:src="@drawable/icon_developer" />

        <LinearLayout
            android:layout_marginLeft="@dimen/default_margin_padding_medium"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_name"
                android:textColor="@color/color_front_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_padding_medium"
        android:paddingLeft="@dimen/default_margin_padding_medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee No."
                android:textColor="@color/color_front_black" />

            <TextView
                android:id="@+id/emp_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_padding_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_padding_small"
                android:text="Mobile"
                android:textColor="@color/color_front_black" />

            <TextView
                android:id="@+id/emp_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_padding_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_padding_small"
                android:text="Telephone"
                android:textColor="@color/color_front_black" />

            <TextView
                android:id="@+id/emp_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_padding_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_padding_small"
                android:text="Address"
                android:textColor="@color/color_front_black" />

            <TextView
                android:id="@+id/emp_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_padding_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_padding_small"
                android:text="Email"
                android:textColor="@color/color_front_black" />

            <TextView
                android:id="@+id/emp_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_padding_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_padding_small"
                android:text="Working Email"
                android:textColor="@color/color_front_black" />

            <TextView
                android:id="@+id/emp_working_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_padding_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_padding_small"
                android:text="First Emergency Contract"
                android:textColor="@color/color_front_black" />

            <TextView
                android:id="@+id/first_emp_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_padding_small" />

            <TextView
                android:id="@+id/first_emp_relation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/first_emp_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/frist_emp_home_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/frist_emp_work_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/frist_emp_mobile_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_padding_small"/>

            <TextView
                android:id="@+id/frist_emp_mobile_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_padding_small"
                android:text="Second Emergency Contract"
                android:textColor="@color/color_front_black" />

            <TextView
                android:id="@+id/con_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_padding_small"
                android:text="LEIGH ALBION" />

            <TextView
                android:id="@+id/con_relation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HUSBAND" />

            <TextView
                android:id="@+id/con_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="l.albion@apollocamper.com.au" />

            <TextView
                android:id="@+id/con_home_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>
    </ScrollView>

    <TextView
        android:text="Information"
        android:paddingLeft="@dimen/default_margin_padding_medium"
        android:layout_marginTop="@dimen/default_margin_padding_medium"
        android:textColor="@color/color_front_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>