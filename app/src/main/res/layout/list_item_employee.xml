<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_marginTop="@dimen/default_margin_padding_small"
    android:background="@drawable/rectangle"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/default_margin_padding_medium"
    android:paddingRight="@dimen/default_margin_padding_medium">


    <ImageView
        android:layout_width="48dp"
        android:layout_height="44dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/icon_developer" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin_padding_medium"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_front_black" />

        <TextView
            android:id="@+id/text_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>

