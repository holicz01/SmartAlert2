<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:text="Evacuation"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/color_front_black"
        android:layout_marginTop="@dimen/default_margin_padding_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/a"
        android:layout_marginTop="@dimen/default_margin_padding_medium"
        android:layout_width="220dp"
        android:layout_height="190dp"
        android:background="@drawable/ss"/>
</LinearLayout>