<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="#FFFFFF">


    <RelativeLayout
        android:layout_marginTop="@dimen/default_margin_padding_large"
        android:paddingLeft="@dimen/default_margin_padding_medium"
        android:paddingRight="@dimen/default_margin_padding_medium"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:background="@drawable/icon_developer"
            android:layout_centerInParent="true"/>


    </RelativeLayout>

    <TextView
        android:paddingLeft="@dimen/default_margin_padding_medium"
        android:paddingRight="@dimen/default_margin_padding_medium"
        android:text="Warit Keawpitak"
        android:layout_marginTop="@dimen/default_margin_padding_small"
        android:textSize="14sp"
        android:textColor="@color/color_front_black"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingLeft="@dimen/default_margin_padding_medium"
        android:paddingRight="@dimen/default_margin_padding_medium"
        android:text="Warit KeawpiWarit Keawpitaktak"
        android:layout_marginTop="4dp"
        android:textSize="18sp"
        android:textColor="@color/color_front_white"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/btn"

        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/icon_call"
        />



</LinearLayout>